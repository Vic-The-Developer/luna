    <!-- Products Start -->
    <div class="container-fluid pt-5">
        <div class="text-center mb-4">
            <h2 class="section-title px-5"><span class="px-2">Latest Products</span></h2>
        </div>
        <div class="row px-xl-5 pb-3">
            <% if(products.length != 0) { %>
                <% products.forEach((prod)=>{ %>
