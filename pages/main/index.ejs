                            </div>
                            <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                                <h6 class="text-truncate mb-3"><%= prod.prodName %></h6>
                                <div class="d-flex justify-content-center">
                                    <h6>Ksh <%= prod.price %></h6><h6 class="text-muted ml-2"><del>Ksh <%= prod.price+5000 %></del></h6>
                                </div>
                            </div>
                            <div class="card-footer d-flex justify-content-between bg-light border">
                                <a href="/<%= slugify(prod.prodCat, { lower: true }) %>/<%= slugify(prod.prodDesc, {lower: true}) %>/<%= prod._id %>" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>View Detail</a>
